@model FestivalManagementWeb.Models.TextKeyValueViewModel

<!-- Text Update Modal -->
<div class="modal fade" id="textUpdateModal" tabindex="-1" aria-labelledby="textUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Upsert" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="textUpdateModalLabel">テキストの更新</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="ItemToEdit.Id" id="modalTextId" />
                    <input type="hidden" name="ItemToEdit.Key" id="modalTextKey" />

                    <div class="mb-3">
                        <label class="form-label">キー</label>
                        <p class="fw-bold" id="modalTextKeyDisplay"></p>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ItemToEdit.Value" class="form-label"></label>
                        <textarea name="ItemToEdit.Value" id="modalTextValue" class="form-control" rows="5" required></textarea>
                        <span asp-validation-for="ItemToEdit.Value" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                    <button type="submit" class="btn btn-primary">更新する</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var modalEl = document.getElementById('textUpdateModal');
        if (!modalEl) return;

        modalEl.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            if (!button) return;
            var id = button.getAttribute('data-id');
            var key = button.getAttribute('data-key');
            var value = button.getAttribute('data-value');

            var idInput = document.getElementById('modalTextId');
            var keyInput = document.getElementById('modalTextKey');
            var keyDisplay = document.getElementById('modalTextKeyDisplay');
            var valueInput = document.getElementById('modalTextValue');

            if (idInput) idInput.value = id || '';
            if (keyInput) keyInput.value = key || '';
            if (keyDisplay) keyDisplay.textContent = key || '';
            if (valueInput) valueInput.value = value || '';
        });

        modalEl.addEventListener('hidden.bs.modal', function () {
            var idInput = document.getElementById('modalTextId');
            var keyInput = document.getElementById('modalTextKey');
            var keyDisplay = document.getElementById('modalTextKeyDisplay');
            var valueInput = document.getElementById('modalTextValue');

            if (idInput) idInput.value = '';
            if (keyInput) keyInput.value = '';
            if (keyDisplay) keyDisplay.textContent = '';
            if (valueInput) valueInput.value = '';
        });
    });
</script>
