@model FestivalManagementWeb.Models.ImageKeyValueViewModel

@{
    ViewData["Title"] = "画像データ管理";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <h4>データの作成・更新</h4>
        <p class="small">同じキーで画像をアップロードすると、既存の画像が上書きされます。</p>
        <form asp-action="Upsert" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="key" class="control-label">キー</label>
                <input name="key" class="form-control" />
            </div>
            <div class="form-group">
                <label for="imageFile" class="control-label">画像ファイル</label>
                <input name="imageFile" type="file" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="アップロード" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h4>データ一覧</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>キー</th>
                    <th>プレビュー</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AllItems)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Key)</td>
                        <td>
                            <img src="@Url.Action("GetImage", new { id = item.Id })" style="max-width: 150px; max-height: 150px;" />
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link text-danger p-0" onclick="return confirm('本当に削除しますか？');">削除</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
